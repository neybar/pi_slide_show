{
  "name": "pi_slide_show",
  "version": "2.0.0",
  "description": "Raspberry Pi photo slideshow with Node.js backend",
  "type": "module",
  "main": "server.mjs",
  "scripts": {
    "start": "node server.mjs",
    "dev": "node --watch server.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run test/unit",
    "test:perf": "vitest run test/perf",
    "test:coverage": "vitest run --coverage",
    "test:smoke": "playwright test --project=smoke",
    "test:e2e": "playwright test --project=chromium",
    "test:e2e:headed": "playwright test --headed",
    "test:perf:docker": "playwright test --project=docker-perf",
    "test:all": "npm run test:unit && npm run test:perf && npm run test:e2e"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/neybar/pi_slide_show.git"
  },
  "keywords": [
    "raspberry",
    "pi",
    "slideshow",
    "photo",
    "nodejs"
  ],
  "author": "James Lance",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/neybar/pi_slide_show/issues"
  },
  "homepage": "https://github.com/neybar/pi_slide_show",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "exifr": "^7.1.3",
    "file-type": "^19.6.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.49.1",
    "@vitest/coverage-v8": "^4.0.18",
    "sharp": "^0.34.5",
    "vitest": "^4.0.18"
  }
}
